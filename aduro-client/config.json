{
  "name": "Aduro Client",
  "slug": "aduro-client",
  "version": "0.6.3",
  "description": "MQTT bridge for Aduro/NBE pellet stoves via pyduro",
  "arch": [
    "amd64",
    "aarch64",
    "armv7"
  ],
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "ingress": false,
  "stdin": false,
  "map": [
    "config:rw",
    "ssl:ro"
  ],
  "options": {
    "log_level": "INFO",
    "publish_debug": false,
    "mqtt_server_ip": "core-mosquitto",
    "mqtt_server_port": 1883,
    "mqtt_username": "",
    "mqtt_password": "",
    "mqtt_base_path": "aduro_h2",
    "mqtt_discovery_prefix": "homeassistant",
    "stove_serial": "",
    "stove_pin": "",
    "mode": "all",
    "stove_temp_entity": "sensor.aduro_stove_temperature",
    "hot_threshold": 100,
    "interval_hot_seconds": 15,
    "interval_cold_seconds": 60,
    "rediscover_every_n_cycles": 20,
    "stove_host_override": "",
    "cloud_fallback_host": "apprelay20.stokercloud.dk",
    "mqtt_tls": false,
    "mqtt_tls_insecure": false,
    "mqtt_ca_cert": "",
    "enable_commands": true,
    "allowed_function_ids": "2,5,6,10,11",
    "command_qos": 0,
    "fast_ack": true,
    "mqtt_protocol": "v311",
    "mqtt_no_local": 0,
    "metrics_enabled": false,
    "metrics_every": 20
  },
  "schema": {
    "log_level": "list(INFO|DEBUG|WARNING|ERROR|QUIET)?",
    "publish_debug": "bool?",
    "mqtt_server_ip": "str",
    "mqtt_server_port": "int",
    "mqtt_username": "str?",
    "mqtt_password": "password?",
    "mqtt_base_path": "str",
    "mqtt_discovery_prefix": "str",
    "stove_serial": "str?",
    "stove_pin": "str?",
    "mode": "list(all|status|network|consumption)?",
    "stove_temp_entity": "str?",
    "hot_threshold": "float?",
    "interval_hot_seconds": "int?",
    "interval_cold_seconds": "int?",
    "rediscover_every_n_cycles": "int?",
    "stove_host_override": "str?",
    "cloud_fallback_host": "str?",
    "mqtt_tls": "bool?",
    "mqtt_tls_insecure": "bool?",
    "mqtt_ca_cert": "str?",
    "enable_commands": "bool?",
    "allowed_function_ids": "str?",
    "command_qos": "int?",
    "fast_ack": "bool?",
    "mqtt_protocol": "list(v311|v5)?",
    "mqtt_no_local": "int?",
    "metrics_enabled": "bool?",
    "metrics_every": "int?"
  }
}